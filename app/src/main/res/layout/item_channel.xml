<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:background="@drawable/channel_item_background"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:focusable="true"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <!-- Cabeçalho com número do canal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/channel_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/purple_500"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/channel_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Logo do canal"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Nome do canal -->
    <TextView
        android:id="@+id/channel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Canal"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_marginBottom="4dp" />

    <!-- Grupo do canal -->
    <TextView
        android:id="@+id/channel_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grupo"
        android:textColor="@color/purple_200"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center" />

</LinearLayout>
